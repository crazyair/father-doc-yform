{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./packages",
    "paths": {
      "yforms": ["yforms/src"],
      "yforms/lib/*": ["yforms/src/*"],
      "yforms/es/*": ["yforms/src/*"],
      "yforms-simple": ["form/src"],
      "yforms-simple/es/*": ["form/src/*"]
    },
    "jsx": "preserve",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "exclude": ["tsconfig.json", "node_modules", "lib", "es", "src/**/__test__/*"],
  "include": [
    "packages/**/src",
    "docs/**/*",
    ".eslintrc.js",
    "jest.config.js",
    "setupTests.js",
    "config/config.js",
    "packages/yforms/webpack.config.js"
  ]
}
