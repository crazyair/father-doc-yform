{
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crazyair/yforms.git"
  },
  "scripts": {
    "start": "dumi dev",
    "build": "father-build",
    "doc:build": "dumi build",
    "now-build": "yarn && yarn doc:build",
    "fa:build": "father build",
    "test": "umi-test -u --coverage",
    "test:ci": "umi-test",
    "lint": "eslint --ext .js,jsx,ts,tsx packages/**/src --fix",
    "lint:es": "eslint --ext .js,jsx,ts,tsx packages/**/src",
    "lint:tsc": "tsc -p tsconfig.json --noEmit",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "pub": "npm run build && lerna publish"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    ".{less,css,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/polyfill": "^7.11.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@testing-library/react": "^11.0.4",
    "@testing-library/react-hooks": "^3.4.1",
    "@types/classnames": "^2.2.10",
    "@types/enzyme": "^3.10.7",
    "@types/jest": "^26.0.14",
    "@types/lodash": "^4.14.161",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/react-test-renderer": "^16.9.3",
    "@types/warning": "^3.0.0",
    "@umijs/fabric": "^2.2.2",
    "@umijs/test": "^3.2.22",
    "babel-eslint": "^10.1.0",
    "babel-plugin-import": "^1.13.0",
    "conventional-changelog": "^3.1.23",
    "cross-env": "^7.0.2",
    "dumi": "^1.0.34",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "7.10",
    "eslint-config-umi": "^1.6.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.2",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-plugin-unicorn": "^22.0.0",
    "father-build": "^1.18.5",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "rc-util": "^5.3.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-test-renderer": "^16.13.1",
    "typescript": "^4.0.3",
    "umi": "^3.2.22"
  },
  "license": "MIT",
  "dependencies": {
    "antd": "^4.6.5",
    "immutable": "^4.0.0-rc.12",
    "rc-queue-anim": "^1.8.5"
  }
}
