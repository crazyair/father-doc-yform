{
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crazyair/yforms.git"
  },
  "scripts": {
    "start": "dumi dev",
    "build": "father-build",
    "doc:build": "dumi build",
    "now-build": "yarn && yarn doc:build",
    "fa:build": "father build",
    "test": "umi-test",
    "lint": "eslint --ext .js,jsx,ts,tsx packages/**/src --fix",
    "lint:es": "eslint --ext .js,jsx,ts,tsx packages/**/src",
    "lint:tsc": "tsc -p tsconfig.json --noEmit",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "pub": "npm run build && lerna publish"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    ".{less,css,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.10.1",
    "@babel/polyfill": "^7.10.1",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/react": "^10.0.6",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/classnames": "^2.2.10",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.154",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/react-test-renderer": "^16.9.2",
    "@types/warning": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "@umijs/fabric": "^2.0.9",
    "babel-eslint": "^10.1.0",
    "babel-plugin-import": "^1.13.0",
    "conventional-changelog": "^3.1.21",
    "cross-env": "^7.0.2",
    "dumi": "^1.0.30",
    "enzyme": "^3.11.0",
    "eslint": "^7.1.0",
    "eslint-config-umi": "^1.6.0",
    "eslint-plugin-flowtype": "^5.1.3",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "father-build": "^1.18.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.0",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.2.7",
    "prettier": "^2.0.5",
    "rc-util": "^5.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-test-renderer": "^16.13.1",
    "typescript": "^3.9.3",
    "umi": "^3.2.3",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-unicorn": "^20.1.0",
    "umi-test": "^1.9.6"
  },
  "license": "MIT",
  "dependencies": {
    "antd": "^4.3.1",
    "rc-queue-anim": "^1.8.5"
  }
}
